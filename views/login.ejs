<%- include("./layout/head.ejs") %>


<body class="bg-img">
   <div class="absolute top-1/2 left-1/2 translate-y-[-50%] translate-x-[-50%] w-96 bg-white shadow-2xl rounded-lg">
    <h1 class="text-center py-5 border-b border-slate-500 font-bold text-2xl">Login</h1>
    <form class="px-10 pb-10 box-border" action="/" method="post">
        <div class="txt-field relative border-b-2 border-slate-500 my-8">
            <input id="username" class="w-full px-1 h-10 text-base outline-none" type="text" name="username" placeholder=" ">
            <span class="content-[''] absolute top-10 left-0 w-0 h-0.5 bg-[#2691d9]"></span>
            <label class="absolute top-1/2 left-1 text-slate-500 translate-y-[-50%] text-base pointer-events-none duration-200" for="username">Username</label>
        </div>
        <div class="txt-field relative border-b-2 border-slate-500 my-8">
            <input id="password" class="w-full px-1 h-10 text-base outline-none" type="password" name="password" placeholder=" ">
            <span class="before:content-[''] absolute top-10 left-0 w-0 h-0.5 bg-[#2691d9]"></span>
            <label class="absolute top-1/2 left-1 text-slate-500 translate-y-[-50%] text-base pointer-events-none duration-200" for="password">Password</label>
        </div>

        <% if (wrongCredentials == true) { %>
        <p class="text-red-600 font-bold text-md text-center pb-2">Incorrect Credentials</p>
        <% } %>
        <button class="w-full h-12 border border-black hover:border-[#2691d9] bg-[#2691d9] rounded-3xl text-base text-white hover:text-indigo-200 font-bold shadow-inner" type="submit" name="submit">Login</button>
    </form>
   </div>
</body>