<%- include("./layout/head.ejs") %>

<body>
    <%- include("./layout/sidebar.ejs") %>

    <div class="h-screen flex flex-col bg-slate-100">
        <%- include("./layout/header.ejs") %>

        <main class="h-screen">
            <section class="p-12">
                <h1 class="text-3xl font-bold mb-6">Patreon Details</h1>
                <div class="p-4 border border-black rounded flex flex-wrap">
                    <div class="w-32 h-32 rounded-full mx-auto mb-4 flex-shrink-0">
                        <img src="/public/img/patreon-pics/no-image.png" alt="Patreon Image" class="w-full h-full rounded-full">
                    </div>
                    <div class="ml-4 flex-grow">
                        <h2 class="text-2xl font-semibold">Name: <%= patreon.name %></h2>
                        <p class="mt-2"><strong>Registration Number:</strong> <%= patreon.reg_num %></p>
                        <p class="mt-2"><strong>Department:</strong> <%= patreon.dept %></p>
                        <p class="mt-2"><strong>Date Registered:</strong> <%= patreon.date_registered %></p>
                        <!-- Add more detailed information here based on your model -->
                        <!-- For example: -->
                        <!-- <p class="mt-2"><strong>Books Loaned:</strong> <%= patreon.books_loaned %></p> -->
                        <!-- <p class="mt-2"><strong>Books Overdue:</strong> <%= patreon.books_overdue %></p> -->
                    </div>
                </div>
            </section>
        </main>

        <%- include("./layout/footer.ejs") %>
    </div>
</body>
</html>
