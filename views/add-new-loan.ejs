<%- include("./layout/head.ejs") %>

<%- include("./layout/head.ejs") %>

<body>
    <%- include("./layout/sidebar.ejs") %>

    <div class="h-screen flex flex-col bg-slate-100">
        <%- include("./layout/header.ejs") %>

        <div class="h-full flex justify-center items-center">
            <div class="border rounded-md bg-white shadow-lg p-6 w-1/2">
                <h1 class="font-bold text-lg mb-4">Add New Loan</h1>
                <form action="/add-loan" method="POST">
                    <div class="mb-4">
                        <label for="book-name" class="block font-semibold mb-1">Book Name:</label>
                        <input type="text" name="book_name" id="book-name" class="border rounded-md w-full px-3 py-2" required>
                    </div>
                    <div class="mb-4">
                        <label for="borrower" class="block font-semibold mb-1">Borrower Name:</label>
                        <input type="text" name="borrower" id="borrower" class="border rounded-md w-full px-3 py-2" required>
                    </div>
                    <div class="mb-4">
                        <label for="date-loaned" class="block font-semibold mb-1">Date Loaned:</label>
                        <input type="date" name="date_loaned" id="date-loaned" class="border rounded-md w-full px-3 py-2" required>
                    </div>
                    <div class="mb-4">
                        <label for="return-date" class="block font-semibold mb-1">Return Date:</label>
                        <input type="date" name="return_date" id="return-date" class="border rounded-md w-full px-3 py-2" required>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="bg-slate-900 text-white px-4 py-2 rounded-md hover:bg-slate-700">Add Loan</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <%- include("./layout/footer.ejs") %>
</body>
</html>
