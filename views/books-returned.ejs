<%- include("./layout/head.ejs") %>

<body>
    
    <%- include("./layout/sidebar.ejs") %>

    <div class="h-screen flex flex-col bg-slate-100">

        <%- include("./layout/header.ejs") %>

        <main class="h-screen">
            <section class="h-1/3 py-8 flex justify-center">
                <div class="bg-white rounded-md shadow-md p-6 w-80 text-center mx-4">
                    <h2 class="text-lg font-semibold mb-4">Books Collected This Week</h2>
                    <p class="text-3xl font-bold text-slate-900">3</p>
                </div>            
                <div class="bg-white rounded-md shadow-md p-6 w-80 text-center mx-4">
                    <h2 class="text-lg font-semibold mb-4">Late Returns</h2>
                    <p class="text-3xl font-bold text-slate-900">1</p>
                </div>            
            </section>        
            <hr class="h-px mx-12 bg-slate-400 border-0">
            <section class="h-2/3 mt-7 mx-10">
                <h2 class="text-center mb-2 font-semibold text-lg">Currently Overdue</h2>
                <section class="flex-grow p-4 border border-black overflow-y-auto">
                    <table class="w-full table-auto text-center">
                        <% if (loans.length === 0) { %>
                            <tr>
                                <td colspan="5" class="pt-3">No Loans Returned</td>
                            </tr>
                        <% } else { %>
                        <thead class="border-b-2 border-black">
                            <tr>
                                <th class="px-4 py-2">No.</th>
                                <th class="px-4 py-2">Name</th>
                                <th class="px-4 py-2">Date Loaned</th>
                                <th class="px-4 py-2">Days Overdue</th>
                                <th class="px-4 py-2">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% loans.forEach((loan, i) => { %>
                            <tr class="border-b border-black">
                                <td class="px-4 py-2"><%= i + 1 %></td>
                                <td class="px-4 py-2"><%= loan.book_name %></td>
                                <td class="px-4 py-2"><%= loan.loan_individual %></td>
                                <td class="px-4 py-2"></td>
                                <td class="px-4 py-2 flex space-x-2 justify-center items-center">
                                    <a href="/loan-details/<%= loan._id %>" class="btn-icon" title="View">                                        <i class="fa-solid fa-eye text-black"></i>
                                    </a>
                                </td>
                            </tr>
                                <% }) %>
                            <% } %>
                        </tbody>
                    </table>
                </section>

            </section>
        </main>

        <%- include("./layout/footer.ejs") %>
    </div>
</body>
</html>
